<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:minWidth="200dp"
    android:minHeight="200dp">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/showFriendsLocation"
        android:text="Friends location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/SCBSwitch"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/realTimeLocation"
        android:text="Real time location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/SCBSwitch"
        />
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/eventsLocation"
        android:text="Events location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/SCBSwitch"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/deleteEventSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete events"
        android:theme="@style/SCBSwitch"/>

    <Button
        android:id="@+id/filter_button"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:text="Filter events" />


</LinearLayout>